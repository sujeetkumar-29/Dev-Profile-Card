<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Developer Profiles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Existing styles */
        .card {
            transition: 0.3s;
            position: relative;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
        }
        .social-links a {
            margin: 0 5px;
            text-decoration: none;
            font-size: 1.2rem;
        }

        /* Custom Modal Styles */
        .custom-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .custom-modal.active {
            display: flex;
        }

        .custom-modal-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            width: 90%;
            max-width: 400px;
        }

        .close-modal {
            float: right;
            cursor: pointer;
            font-size: 1.5rem;
            margin-top: -10px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-4">Developer Profiles</h1>
        <a href="/add" class="btn btn-primary mb-4">Add New Developer</a>
        <div class="row">
            <% users.forEach(user => { %>
                <div class="col-md-4 mb-4">
                    <div class="card p-3 shadow-sm">
                        <!-- Three-dot Menu -->
                        <div class="dropdown">
                            <button class="btn btn-secondary " type="button" data-bs-toggle="dropdown">
                                &#x22EE;
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/edit/<%= user.id %>" class="dropdown-item">Edit</a>
                                </li>
                                <li>
                                    <button onclick="openDeleteModal('<%= user.id %>')" class="dropdown-item text-danger">
                                        Delete
                                    </button>
                                </li>
                            </ul>
                        </div>

                        <div class="text-center">
                            <img src="<%= user.imageUrl %>" alt="Profile Picture">
                            <h3 class="mt-2"><%= user.name %></h3>
                            <h5 class="text-muted"><%= user.title %></h5>
                        </div>
                        <p><%= user.bio %></p>

                        <h6>Skills:</h6>
                        <ul class="list-inline">
                            <% user.skills.forEach(skill => { %>
                                <li class="list-inline-item badge bg-primary p-2 m-1"><%= skill %></li>
                            <% }) %>
                        </ul>

                        <h6>Projects:</h6>
                        <ul>
                            <% user.projects.forEach(project => { %>
                                <li><a href="<%= project.projectLink %>" target="_blank"><%= project.projectName %></a></li>
                            <% }) %>
                        </ul>

                        <div class="social-links text-center">
                            <a href="<%= user.githubLink %>" target="_blank">ðŸ”— GitHub</a>
                            <a href="<%= user.linkedinLink %>" target="_blank">ðŸ”— LinkedIn</a>
                            <a href="<%= user.portfolioLink %>" target="_blank">ðŸ”— Portfolio</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Custom Delete Modal -->
    <div id="deleteModal" class="custom-modal">
        <div class="custom-modal-content">
            <span class="close-modal" onclick="closeDeleteModal()">&times;</span>
            <h5>Confirm Deletion</h5>
            <form id="deleteForm" method="POST">
                <div class="mb-3">
                    <label for="password" class="form-label">Enter Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-danger w-100">Delete Profile</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (only for dropdown) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Modal JavaScript -->
    <script>
        const modal = document.getElementById('deleteModal');
        const deleteForm = document.getElementById('deleteForm');

        function openDeleteModal(userId) {
            deleteForm.action = `/delete/${userId}`;
            modal.classList.add('active');
        }

        function closeDeleteModal() {
            modal.classList.remove('active');
        }

        // Close modal when clicking outside
        modal.addEventListener('click', function(event) {
            if (event.target === modal) {
                closeDeleteModal();
            }
        });

        // Close modal on escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
</body>
</html>