<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Developer Profiles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            transition: 0.3s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            object-fit: cover;
        }
        .social-links a {
            margin: 0 5px;
            text-decoration: none;
            font-size: 1.2rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-4 ">Developer Profiles</h1>
        <a href="/add" class="btn btn-primary mb-4">Add New Developer</a>
        <div class="row">
            <% users.forEach(user => { %>
                <div class="col-md-4 mb-4">
                    <div class="card p-3 shadow-sm">
                        <a href="/edit/<%= user.id %>" class="btn btn-secondary mb-2">Edit</a>
                        <form action="/delete/<%= user.id %>" method="POST" class="mt-2">
                            <input type="password" name="password" class="form-control mb-2" placeholder="Enter Password" required>
                            <button type="submit" class="btn btn-danger w-100">Delete Profile</button>
                        </form>
                        
                        <div class="text-center">
                            <img src="<%= user.imageUrl %>" alt="Profile Picture">
                            <h3 class="mt-2"><%= user.name %></h3>
                            <h5 class="text-muted"><%= user.title %></h5>
                        </div>
                        <p><%= user.bio %></p>

                        <h6>Skills:</h6>
                        <ul class="list-inline">
                            <% user.skills.forEach(skill => { %>
                                <li class="list-inline-item badge bg-primary p-2 m-1"><%= skill %></li>
                            <% }) %>
                        </ul>

                        <h6>Projects:</h6>
                        <ul>
                            <% user.projects.forEach(project => { %>
                                <li><a href="<%= project.projectLink %>" target="_blank"><%= project.projectName %></a></li>
                            <% }) %>
                        </ul>

                        <div class="social-links text-center">
                            <a href="<%= user.githubLink %>" target="_blank">ðŸ”— GitHub</a>
                            <a href="<%= user.linkedinLink %>" target="_blank">ðŸ”— LinkedIn</a>
                            <a href="<%= user.portfolioLink %>" target="_blank">ðŸ”— Portfolio</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
